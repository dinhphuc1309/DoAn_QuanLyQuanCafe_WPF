<Window x:Class="DoAn_QuanLyQuanCafe.PresentationTier.MainScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoAn_QuanLyQuanCafe.PresentationTier"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainScreenWindow"  Height="721" Width="1280"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown" >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="64"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="99"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth3" Grid.RowSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="99"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Image  Source="/Images/logo.png" VerticalAlignment="Top" Margin="0,30,0,0" Width="44" Height="44" />
                <StackPanel Grid.Row="1" Margin="0,62.5,0,0">
                    <RadioButton Width="64" Height="64" Style="{StaticResource RadioButtonCustom}" Checked="MenuClick" Margin="0,0,0,49">
                        <StackPanel>
                            <materialDesign:PackIcon
          
                            Kind="Home"
          
                            Width="32"
          
                            Height="32"
          
                            HorizontalAlignment="Center"/>
                            <TextBlock Text="Menu" FontFamily="Google Sans Medium" FontSize="12" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Width="64" Height="64" Style="{StaticResource RadioButtonCustom}" Checked="ThongKeClick" Margin="0,0,0,49">
                        <StackPanel>
                            <materialDesign:PackIcon
                            Kind="AlignVerticalBottom"
                             Width="32"
          
                            Height="32"
                            HorizontalAlignment="Center" />

                            <TextBlock Text="Thống kê" FontFamily="Google Sans Medium" FontSize="12" />
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Width="64" Height="64" Style="{StaticResource RadioButtonCustom}" Checked="CaiDatClick">
                        <StackPanel>
                            <materialDesign:PackIcon
                            Kind="Tune"
                             Width="32"
          
                            Height="32"
                            HorizontalAlignment="Center" />

                            <TextBlock Text="Cài đặt" FontFamily="Google Sans Medium" FontSize="12" />
                        </StackPanel>
                    </RadioButton>


                </StackPanel>
            </Grid>
        </materialDesign:Card>


        <TextBlock x:Name="txtName" Margin="32,0,0,0" Height="50" Grid.Column="1" Width="235" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Google Sans Medium" FontSize="36" Foreground="#000000"/>

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="474"/>
            </Grid.ColumnDefinitions>
            <Grid VerticalAlignment="Center"  HorizontalAlignment="Right">

                <StackPanel>

                    <TextBox
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Width="394"
                        Height="51"
                        AcceptsReturn="True"
                        FontFamily="Google Sans Medium"
                        FontSize="14"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        materialDesign:HintAssist.Hint="Search"
                        materialDesign:HintAssist.Foreground="#0A785F"
                        materialDesign:TextFieldAssist.UnderlineBrush="#0A785F"/>
                </StackPanel>
            </Grid>

            <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="48,0,0,0">
                <Grid Width="48" Height="48">
                    <Border  CornerRadius="30">
                        <Image Source="/Images/userimage.png"/>
                    </Border>
                </Grid>
                <StackPanel VerticalAlignment="Center" Margin="11">
                    <TextBlock Text="Jane Doe" FontFamily="Google Sans Medium" FontSize="18" />
                    <TextBlock Text="Nhân viên" FontFamily="Google Sans Medium" FontSize="14" Foreground="#999999"/>
                </StackPanel>
            </StackPanel>
            <Border Grid.ColumnSpan="2" BorderBrush="#EBEBEB" BorderThickness="3" Height="3" Width="1216" VerticalAlignment="Bottom"/>
        </Grid>
        <!--<materialDesign:Card Width="800" Height="804" Grid.Row="1" Grid.Column="1" materialDesign:ShadowAssist.ShadowDepth="Depth3">
            <StackPanel>
                <Border Margin="0,129,0,0" Grid.ColumnSpan="2" BorderBrush="#7B7B7B" BorderThickness="3" Height="4" Width="654" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
            </StackPanel>
        </materialDesign:Card>-->
        <Frame Grid.Row="1" Grid.Column="1" x:Name="myFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
